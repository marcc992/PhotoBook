<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.photogrid.view.fragment.PhotoDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/iv_photo_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_photo_detail_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#AA000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_photo_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.WindowTitle"
            app:layout_constraintEnd_toEndOf="@+id/view_photo_detail_background"
            app:layout_constraintStart_toStartOf="@+id/view_photo_detail_background"
            app:layout_constraintTop_toTopOf="@+id/view_photo_detail_background" />

        <TextView
            android:id="@+id/tv_photo_detail_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.WindowTitle"
            app:layout_constraintEnd_toEndOf="@+id/view_photo_detail_background"
            app:layout_constraintStart_toStartOf="@+id/view_photo_detail_background"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo_detail_title" />

        <TextView
            android:id="@+id/tv_photo_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.WindowTitle"
            app:layout_constraintEnd_toEndOf="@+id/view_photo_detail_background"
            app:layout_constraintStart_toStartOf="@+id/view_photo_detail_background"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo_detail_author" />

        <TextView
            android:id="@+id/tv_photo_detail_info_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.WindowTitle"
            app:layout_constraintEnd_toEndOf="@+id/view_photo_detail_background"
            app:layout_constraintStart_toStartOf="@+id/view_photo_detail_background"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo_detail_date" />

        <TextView
            android:id="@+id/tv_photo_detail_info_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.WindowTitle"
            app:layout_constraintEnd_toEndOf="@+id/view_photo_detail_background"
            app:layout_constraintStart_toStartOf="@+id/view_photo_detail_background"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo_detail_info_first" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_close_detail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_loading_photo_detail"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>